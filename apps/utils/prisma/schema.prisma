model Invitations {
  id             String   @id @default(cuid())
  email          String
  expiresAt      DateTime @default(dbgenerated("NOW() + INTERVAL '3 days'")) // expires in 3 days
  welcomeMessage String?
  userType       UserRole
  tenant         Tenant   @relation(fields: [tenantSlug], references: [slug])
  tenantSlug     String
}


enum MembershipStatus {
  PENDING // The user has requested to join but is not yet approved.
  MEMBER // The user is an active, approved member of the organization.
}


